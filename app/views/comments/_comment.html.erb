<% if @post.comments.any? %>
  <div class = "row">

    <div class = "col-sm-6">
      <h3>Ð¡omments:</h3>
    </div>

    <div class = "col-sm-1">
      <h5>Selector</h5>
    </div>

    <div class = "col-sm-4 ">
      <div class = "form-inline">
        <%= form_tag(post_path(@post), method: :get) do |form| %>
          <%= select_tag :status, options_for_select(["published", "unpublished"],'published'), class: 'form-control selector'%>
          <%= submit_tag 'OK', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>

    <% (@comments || @post.comments).each do |comment| %>
      <% next unless comment.persisted? %>
      <div class="card">
        <div class="card-body">
          <div class = "row">

          <div class = "col-sm-1">
            <%= image_tag 'user.png', class: 'image-user' %>
          </div>

          <div class = "col-sm-9">
            <div class = "font-weight-bold">
              <%= get_author(comment) %><br>
              Status: <%= comment.status %><br>

              <% if comment.status.include?("unpublished") %>
                <%= form_tag(post_comment_path(post_id: comment.post_id, id: comment.id), 
                                      method: :patch) do |form| %>
                  <%= submit_tag 'Published', class: 'btn btn-success', name: "published" %>
                <%end%>
              <% end %>
            </div>

            <br>

            <div>
              <%= comment.body%>
              <div class = 'poster'>
                Last updated <%= distance_of_time_in_words(comment.updated_at.to_i, Time.now)%>
              </div>
            </div>
          </div>

              <%= link_to 'Delete', post_comment_path(post_id: comment.post_id, id: comment.id),
                          method: :delete,
                          data: { confirm: 'Are you sure?' }, class: "btn btn-danger check-button"%> 

              <%= link_to 'Edit', edit_post_comment_path(post_id: comment.post_id, id: comment.id), 
                                  method: :get, class: "btn btn-warning check-button" %>
        </div>
      </div>
    </div>
    <% end %>
<%else%>
<%end%>
