 <div class="card my-1"> 
  <div class="card-body color-comment">
   <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
    <h3>Add a comment:</h3>
    <%= form_for [@post, @post.comments.build], local: true do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :commenter, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= form.label :comment %><br>
        <%= form.text_area(:body,  cols: 3, rows: 3, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= form.label :status %><br>
        <%= select_tag 'comment[status]', options_for_select(Comment.statuses.keys), class: 'form-control'%>
      </div>
      <p>
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </p>
    <%end%>
  </div>
 </div>
</div>
