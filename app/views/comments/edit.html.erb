<div class="container">
<h1>Update your comment</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@post, @comment], method: :put) do |form| %>
      <%= render 'shared/error_messages'%>
      <div class="form-group">
       <%= form.label :name %>
       <%= form.text_field :commenter, class: 'form-control' %>
     </div>
     <div class="form-group">
      <%= form.label :comment %>
      <%= form.text_area(:body,  cols: 10, rows: 10, class: 'form-control')%>
     </div>
     <div class="form-group">
      <%= form.label :status %><br>
      <%= select_tag 'comment[status]', options_for_select(Comment.statuses.keys), class: 'form-control'%>
     </div>

      <%= form.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back to posts", posts_path %>
  </div>
</div>
</div>