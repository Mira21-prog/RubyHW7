<div class = "container page-container">
 <div class = "row">
<%if @posts.empty?%>
    <br>
    <div class = "empty-post">
    <h2>No posts yet</h2>
    </div>
<%else%>
   <% @posts.each do |post|%>
   <div class="col-sm-6">
     <div class="card">
       <div class="card-body">
        <h2 class='post-title'>
          <%= truncate("#{post.title}", length: 65) %>
        </h2>
        <div class = "poster">
            Posted by <%=get_author(post)%>
          </div>
        <p class='post-content'>
          <%= truncate("#{post.content}", length: 200) %>
          <%= link_to 'Read more', post_path(post), data: { turbolinks: false }%>
        </p>
        <%= image_tag post.image, class: 'img-responsive' %>
        <% if logged_in?&&get_owner_post?(post)%>
        <p class='post-button'>
          <%= link_to 'Edit', edit_post_path(post)%>
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you sure?'} %>
        </p>
        <% else %>
        <% end %>
       </div>
      </div>
    </div>
<%end%>
<%end%>

</div>
</div>
 <%= render 'posts/footer'%>