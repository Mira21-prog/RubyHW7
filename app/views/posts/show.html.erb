<div class = "container">
	  <h2 class = 'post-title'>
      <br>
      <br>
	    <%= @post.title%>
	  </h2>
	  <div class = 'poster'>
	    Posted by <%=get_author(@post)%>
	  </div>
    <br>
	  <p class='post-content'>
      <%= @post.content %>
    </p>
    <%= image_tag @post.image, class: 'img-responsive' %>

    <div class = 'poster'>
      Last updated <%= distance_of_time_in_words(@post.updated_at.to_i, Time.now)%>
    </div>
   <br>
    <div><span class="glyphicon glyphicon-eye-open"></span> <%= @post.impressionist_count%></div>
   <br>
  

    <p class='post-button'>
      <%= link_to '| Edit ', edit_post_path(@post)%>
      <%= link_to "| Delete |", post_path(@post), method: :delete, data: { confirm: 'Are you sure?'} %>
      <%= link_to "Back to posts |", posts_path %>
    </p>
     <hr>
      
</div>
<div class= "container">
  <%= render 'comments/form' %>
</div>
<div class= "container">
  <%= render 'comments/comment' %>
</div>