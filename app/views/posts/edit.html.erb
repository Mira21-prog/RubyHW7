<div class="container">
<h1>Update your post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |form| %>
      <%= render 'shared/error_messages'%>
      <div class="form-group">
       <%= form.label :title %>
       <%= form.text_field :title, class: 'form-control' %>
     </div>
     <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area(:content,  cols: 10, rows: 10, class: 'form-control')%>
     </div>
     <div class="form-group">
      <%= form.label :image%>
      <%= form.text_field :image, class: 'form-control'%>
     </div>

     <div class="form-group">
      <%= form.label :select_author%>
      <%= select_tag 'author_id', options_for_select(@authors.collect{ |u| [u.full_name, u.id] }), class: 'form-control'%>
     </div>

      <%= form.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back to posts", posts_path %>
  </div>
</div>
</div>